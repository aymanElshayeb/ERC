<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/payment_type_tv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/inter_black"
        android:gravity="start|center_vertical"
        android:paddingStart="8dp"
        android:text="Current Cash In Safe"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <EditText
        android:id="@+id/payment_type_amount_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corners_login_edittext_light"
        android:fontFamily="@font/inter_black"
        android:gravity="start|center_vertical"
        android:inputType="numberDecimal"
        android:hint="0"
        android:paddingHorizontal="8dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/payment_type_amount_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/inter_black"
        android:gravity="start|center_vertical"
        android:paddingStart="8dp"
        android:text=""
        android:textColor="@color/errorColor"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_type_amount_et"
        />

</androidx.constraintlayout.widget.ConstraintLayout>